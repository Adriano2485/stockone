<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dusso40.stockone">

    <!-- PERMISSÕES OBRIGATÓRIAS PARA FIREBASE -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:label="StockOne"
        android:icon="@mipmap/ic_launcher">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Tema usado enquanto o Flutter carrega -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- Intent Filter para lançar o app -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <!-- Meta-data usado pelo Flutter para registrar plugins -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

    </application>

    <!-- QUERIES PARA PERMITIR ABRIR URLs E PROCESSAR TEXTO -->
    <queries>
        <!-- ✅ PERMITE ABRIR URLs HTTPS -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
        
        <!-- ✅ PERMITE ABRIR URLs HTTP -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="http" />
        </intent>

        <!-- Query original para processar texto (mantida) -->
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT"/>
            <data android:mimeType="text/plain"/>
        </intent>
    </queries>

</manifest>
